{
    "name": "Stepan Chrome Client",
    "version": "1.0",
    "description": "Have fun with choosing tabs!",
    "permissions": ["declarativeContent", "activeTab"],
    "background": {
        "scripts": ["auto-trigger.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Stepan Chrome Client",
        "default_icon": {
            "16": "images/circle_red_48x48.png",
            "32": "images/circle_red_48x48.png",
            "48": "images/circle_red_48x48.png",
            "128": "images/circle_red_48x48.png"
        }
    },
    "icons": {
        "16": "images/circle_red_48x48.png",
        "32": "images/circle_red_48x48.png",
        "48": "images/circle_red_48x48.png",
        "128": "images/circle_red_48x48.png"
    },
    "manifest_version": 2
  }